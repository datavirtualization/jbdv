<?xml version="1.0"?>

<!-- 
      The resources section.
      The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
-->
<xfragment>
    <res id="conditions.xml" src="${izpack.config.dir.parsed}/conditions.xml"/>
    <!-- common images for the background and language selection logo -->
    <res id="Installer.background" src="${izpack.config.dir}/images/background.png"/>
    <!-- installer specific splash / headline graphics -->
    <res id="Installer.splash" src="${izpack.config.dir}/images/splash.png" duration="2000"/>
    <res id="userInputSpec.xml" src="${izpack.config.dir.parsed}/userInputSpec.xml"/>
    <res id="Heading.image" src="${izpack.config.dir}/images/heading.png"/>
    <res id="ProcessPanel.Spec.xml" src="${izpack.config.dir.parsed}/ProcessPanel.Spec.xml"/>
